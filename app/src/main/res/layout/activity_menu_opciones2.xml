<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".MenuOpciones2">

    <ImageView
        android:id="@+id/BarraHerramientas"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ea8121"
        />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#ea8121"
        android:onClick="VolverMenu2"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:srcCompat="@drawable/btnregresar" />

    <Button
        android:id="@+id/btn_ActualizarPerfil"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@id/BarraHerramientas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:onClick="ActualizarPerfil2"
        android:text="ACTUALIZAR PEFIL"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_POLITICAS"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_ActualizarPerfil"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:text="POLITICAS DE PRIVACIDAD"
        android:textSize="16dp"
        />

    <Button
        android:id="@+id/btn_CerrarSesion"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@id/btn_POLITICAS"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="25dp"
        android:onClick="CerrarSesion2"
        android:text="CERRAR SESION"
        android:textSize="16dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".EvaluacionCovid">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_TituloEvaluacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="EVALUACION"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_pregunta3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_below="@id/txt_TituloEvaluacion"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:text="¿Como te sientes hoy?"
                android:textSize="23dp"
                android:textAlignment="center"/>

            <View
                android:id="@+id/line_separador"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@id/txt_pregunta3"
                android:layout_marginTop="10dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_evc_1"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/sw_evc_1"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/line_separador"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="¿Tienes dificultades para respirar o sensaciones de falta de aire?"
                android:textSize="17dp" />

            <Switch
                android:id="@+id/sw_evc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_separador"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="35dp"
                android:scaleX="1.7"
                android:scaleY="1.7" />

            <View
                android:id="@+id/line_separador1"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@id/tv_evc_1"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:background="#B1AEAE"/>

            <TextView
                android:id="@+id/tv_evc_2"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/sw_evc_1"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@id/line_separador1"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="¿Has tenido mas de 38° C de temperatura en las últimas 24 horas?"
                android:textSize="17dp" />

            <Switch
                android:id="@+id/sw_evc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_separador1"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="35dp"
                android:scaleX="1.7"
                android:scaleY="1.7" />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>